<%- include("../partials/header"); %>

<div class="container">
	
	<div class="row">
		
		<h1 class="text-center">Edit Comment</h1>
		
		<div style="width: 40%; margin: 30px auto;">
			
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
				<div class="form-group">
					<label for="comment[text]">Comment</label>
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-default btn-block">Submit!</button>
				</div>
			</form>
			
			<a href="/campgrounds">Go Back</a>
			
		</div>
		
		
		
	</div>

</div>
	
<%- include("../partials/footer"); %>